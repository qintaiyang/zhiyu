<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <size android:height="3.0dip" />
            <solid android:color="@color/divider_line" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <shape android:tint="?colorControlActivated" android:shape="rectangle">
                <size android:height="3.0dip" />
                <solid android:color="@color/divider_line" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="?colorControlActivated" android:shape="rectangle">
                <size android:height="3.0dip" />
                <solid android:color="@color/text_blue" />
            </shape>
        </scale>
    </item>
</layer-list>
