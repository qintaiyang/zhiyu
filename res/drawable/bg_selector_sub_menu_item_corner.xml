<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/input_panel_bg"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask" android:drawable="@color/input_panel_bg" />
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="@dimen/kk_8dp" />
                    <solid android:color="@color/input_panel_bg" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="@dimen/kk_8dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
